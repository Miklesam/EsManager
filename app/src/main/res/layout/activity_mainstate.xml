<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBF00"
    tools:context=".mainstate">

    <ImageView
        android:layout_width="140sp"
        android:layout_height="40sp"
        android:id="@+id/backtomenu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/menu_bttn"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team_name"/>

        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/InfoBlock"/>

<LinearLayout
    android:layout_marginTop="10sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lainingfeature"
    android:orientation="horizontal">
    <TextView
        android:textColor="#000000"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:text="Laining"
        android:id="@+id/LainingView"/>

    <TextView
        android:textColor="#000000"
        android:layout_marginLeft="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LainingPoints"/>


</LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/farmingfeature"
        android:orientation="horizontal">
        <TextView
            android:textColor="#000000"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:text="Farming"
            android:id="@+id/FarmingView"/>

        <TextView
            android:layout_marginLeft="5sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FarmingPoints"/>



    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fightingfeature"
            android:orientation="horizontal">
            <TextView
                android:layout_width="180sp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="Fighting"
                android:id="@+id/FightingView"/>

            <TextView
                android:textColor="#000000"
                android:layout_marginLeft="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/FightingPoints"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lategamefeature"
            android:orientation="horizontal">
            <TextView
                android:textColor="#000000"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:text="LateGame"
                android:id="@+id/LateGameView"/>

            <TextView
                android:textColor="#000000"
                android:layout_marginLeft="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LateGamePoints"/>


        </LinearLayout>
        









    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140sp"
                android:layout_height="40sp"
                app:srcCompat="@drawable/media_bttn"
                android:id="@+id/Media"/>
            <ImageView
                android:layout_width="140sp"
                android:layout_height="40sp"
                app:srcCompat="@drawable/practice_rttn"
                android:id="@+id/Play_game"/>
            <ImageView
                android:layout_width="140sp"
                android:layout_height="40sp"
                android:id="@+id/Market"
                app:srcCompat="@drawable/market_bttn_bttn"/>
            <ImageView
                android:layout_width="140sp"
                android:layout_height="40sp"
                app:srcCompat="@drawable/team_bttn"
                android:id="@+id/Teamimprove"/>


        </LinearLayout>

       <ListView
           android:layout_width="300sp"
           android:layout_height="match_parent"
           android:id="@+id/TeamCW"
           android:scrollbars="none"
           android:visibility="invisible">

       </ListView>


    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentRight="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="XP"/>

        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/XP"
            android:text="0"/>



        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Y"/>


        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Year"
            android:text="0"/>
        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="M"/>

        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Month"
            android:text="0"/>
        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="D"/>

        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Day"
            android:text="0"/>




        <ImageView
            android:layout_marginLeft="10sp"
            android:layout_width="22sp"
            android:layout_height="30sp"
            app:srcCompat="@drawable/people"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/FansNumber"
            />


        <ImageView
            android:layout_marginLeft="10sp"
            android:layout_width="25sp"
            android:layout_height="30sp"
            app:srcCompat="@drawable/rubl"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Goldbalance"
            android:text="Золото"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Your_Team"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Состав"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/teamposition1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/teamposition2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/teamposition3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/teamposition4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/teamposition5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="15sp" />


    </LinearLayout>

</LinearLayout>







</RelativeLayout>