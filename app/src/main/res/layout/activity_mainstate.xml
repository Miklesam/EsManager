<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainfon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".mainstate">

    <ImageView
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:id="@+id/backtomenu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/menu_bttn"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:id="@+id/team_name"/>

        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#45283c"
            android:id="@+id/InfoBlock"/>

<LinearLayout
    android:layout_marginTop="10sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lainingfeature"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="32sp"
        android:layout_height="32sp"
        app:srcCompat="@drawable/map_icon" />

    <TextView
        android:textColor="#000000"
        android:layout_marginLeft="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LainingPoints"/>

    <ImageView
        android:layout_marginLeft="5sp"
        android:layout_width="32sp"
        android:layout_height="32sp"
        app:srcCompat="@drawable/coin_04d"
        />

    <TextView
        android:layout_marginLeft="5sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FarmingPoints"/>

    <ImageView
        android:layout_marginLeft="5sp"
        android:layout_width="32sp"
        android:layout_height="32sp"
        app:srcCompat="@drawable/sword"
        />

    <TextView
        android:textColor="#000000"
        android:layout_marginLeft="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FightingPoints"/>

    <ImageView
        android:layout_marginLeft="5sp"
        android:layout_width="32sp"
        android:layout_height="32sp"
        app:srcCompat="@drawable/book_04b"
        />

    <TextView
        android:textColor="#000000"
        android:layout_marginLeft="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LateGamePoints"/>

</LinearLayout>












    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/Play_game"
                android:layout_width="150sp"
                android:layout_height="40sp"
                app:srcCompat="@drawable/practice_bttn" />
            <ImageView
                android:layout_width="150sp"
                android:layout_height="40sp"
                android:id="@+id/Market"
                app:srcCompat="@drawable/market_bttn"/>
            <ImageView
                android:layout_width="150sp"
                android:layout_height="40sp"
                app:srcCompat="@drawable/team_bttn"
                android:id="@+id/Teamimprove"/>


        </LinearLayout>






    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentRight="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="XP"/>

        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#45283c"
            android:id="@+id/XP"
            android:text="0"/>



        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Y"/>


        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#45283c"
            android:id="@+id/Year"
            android:text="0"/>
        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="M"/>

        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Month"
            android:textColor="#45283c"
            android:text="0"/>
        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="D"/>

        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Day"
            android:textColor="#45283c"
            android:text="0"/>




        <ImageView
            android:layout_marginLeft="10sp"
            android:layout_width="22sp"
            android:layout_height="30sp"
            app:srcCompat="@drawable/people"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#45283c"
            android:id="@+id/FansNumber"
            />


        <ImageView
            android:layout_marginLeft="10sp"
            android:layout_width="25sp"
            android:layout_height="30sp"
            app:srcCompat="@drawable/rubl"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#45283c"
            android:id="@+id/Goldbalance"
            android:text="Золото"/>


    </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="32sp"
             android:layout_height="32sp"
             app:srcCompat="@drawable/facebook"/>

         <ImageView
             android:layout_width="32sp"
             android:layout_height="32sp"
             app:srcCompat="@drawable/youtube"/>

         <ImageView
             android:layout_width="32sp"
             android:layout_height="32sp"
             app:srcCompat="@drawable/twitter"/>

     </LinearLayout>



    </LinearLayout>

</LinearLayout>







</RelativeLayout>