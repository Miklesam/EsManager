<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbe1e9"
    tools:context=".TeamsShow">

    <ImageView
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:id="@+id/Backs"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/back_bttn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#45283c"
        android:text="Teams Info"/>


    <ListView
        android:id="@+id/TeamList"
        android:layout_marginTop="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent"
        android:scrollbars="none">

    </ListView>

    <LinearLayout
        android:layout_width="300sp"
        android:layout_marginTop="40sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ListView
            android:id="@+id/teamroost"
            android:layout_width="300sp"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="40sp"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/TeamInfo"
        android:visibility="invisible">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60sp"
                    android:layout_height="100sp"
                    android:id="@+id/faceima"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10sp"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/laning"
                        android:textColor="#45283c"
                        android:text="Лайнинг"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fighting"
                        android:textColor="#45283c"
                        android:text="Файтинг"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/farming"
                        android:textColor="#45283c"
                        android:text="Фарм"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/supporting"
                        android:textColor="#45283c"
                        android:text="Поддержка"/>


                </LinearLayout>


            </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/FlagImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#45283c"
        android:text="Turtle" />
</LinearLayout>



        </LinearLayout>






    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#45283c"
        android:text="Signature"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60sp"
            android:layout_height="35sp"
            android:id="@+id/signature1"
            app:srcCompat="@drawable/pick"

            />
        <ImageView
            android:layout_width="60sp"
            android:layout_height="35sp"
            android:id="@+id/signature2"
            app:srcCompat="@drawable/pick"

            />
        <ImageView
            android:layout_width="60sp"
            android:layout_height="35sp"
            android:id="@+id/signature3"
            app:srcCompat="@drawable/pick"

            />


    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="10sp"
                android:layout_width="25sp"
                android:layout_height="30sp"
                app:srcCompat="@drawable/rubl"
                />

            <TextView
                android:id="@+id/PlayerCost"
                android:textColor="#45283c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_marginLeft="10sp"
                android:layout_width="22sp"
                android:layout_height="30sp"
                app:srcCompat="@drawable/people"
                />

            <TextView
                android:id="@+id/PlayerFans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#45283c"
                />

        </LinearLayout>


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Description"
        android:layout_width="400sp"
        android:textColor="#45283c"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        />


        </ScrollView>






</LinearLayout>



</RelativeLayout>