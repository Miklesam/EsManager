<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbe1e9"
    tools:context=".Shop">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <ImageView
            android:layout_marginLeft="10sp"
            android:layout_width="22sp"
            android:layout_height="30sp"
            app:srcCompat="@drawable/people"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#45283c"
            android:id="@+id/Fansbalance"
            />
        <ImageView
            android:layout_marginLeft="10sp"
            android:layout_width="25sp"
            android:layout_height="30sp"
            app:srcCompat="@drawable/rubl"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#45283c"
            android:id="@+id/Goldbalance"
            />
    </LinearLayout>




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_from_shop"
        app:srcCompat="@drawable/back_bttn"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <LinearLayout
            android:layout_marginTop="50sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="55sp"
                android:layout_width="150sp"
                android:layout_height="40sp"
                android:text="Rewarded"
                app:srcCompat="@drawable/ad_bttn"
                android:id="@+id/rewarded"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#45283c"
                android:text="+1500 rubles"
                android:textSize="20sp"
                android:gravity="right"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55sp"
                android:layout_height="45sp"
                app:srcCompat="@drawable/epic"
                />

            <ImageView
                android:layout_width="150sp"
                android:layout_height="40sp"
                android:id="@+id/epic_bttn"
                app:srcCompat="@drawable/epic_bttn"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+5000 rubles"
                android:textSize="20sp"
                android:textColor="#45283c"
                android:gravity="right"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55sp"
                android:layout_height="48sp"
                app:srcCompat="@drawable/rare"
                />

            <ImageView
                android:layout_width="150sp"
                android:layout_height="40sp"
                android:id="@+id/rare_bttn"
                app:srcCompat="@drawable/rare_bttn"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+15000 rubles"
                android:textSize="20sp"
                android:textColor="#45283c"
                android:gravity="right"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55sp"
                android:layout_height="48sp"
                app:srcCompat="@drawable/legendary"
                />

            <ImageView
                android:layout_width="150sp"
                android:layout_height="40sp"
                android:id="@+id/legendary_bttn"
                app:srcCompat="@drawable/legendaryjpg"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+30000 rubles"
                android:textSize="20sp"
                android:textColor="#45283c"
                android:gravity="right"/>


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>