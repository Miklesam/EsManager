<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbe1e9"
    tools:context=".practiceactivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="XP"/>

        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/XP"
            android:text="0"/>



        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Y"/>


        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Year"
            android:text="0"/>
        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="M"/>

        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Month"
            android:text="0"/>
        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="D"/>

        <TextView
            android:layout_marginLeft="2sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Day"
            android:text="0"/>




        <ImageView
            android:layout_marginLeft="10sp"
            android:layout_width="22sp"
            android:layout_height="30sp"
            app:srcCompat="@drawable/people"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/FansNumber"
            />


        <ImageView
            android:layout_marginLeft="10sp"
            android:layout_width="25sp"
            android:layout_height="30sp"
            app:srcCompat="@drawable/rubl"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/Goldbalance"
            android:text="Золото"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:orientation="vertical">
            <TextView
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Teams Training"
                android:id="@+id/Teams"/>

            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:text="Solo Training"
                android:id="@+id/Solo"/>
        </LinearLayout>




        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/TeamCW"
            android:scrollbars="none"
            >

        </ListView>


    </LinearLayout>





    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:orientation="vertical"
            android:visibility="invisible">

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollsolo"
            android:scrollbars="none"
            android:visibility="invisible">



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/solotrainigLinear"
                android:visibility="invisible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solo Training"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150sp"
                            android:layout_height="20sp"
                            android:text="Player1"
                            android:id="@+id/textplayer1"/>

                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="100sp"
                            app:srcCompat="@drawable/profile"/>

                    </LinearLayout>

                    <Spinner
                        android:layout_width="200sp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/prspinner1">
                    </Spinner>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150sp"
                            android:layout_height="20sp"
                            android:text="Player2"
                            android:id="@+id/textplayer2"/>

                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="100sp"
                            app:srcCompat="@drawable/profile"/>

                    </LinearLayout>

                    <Spinner
                        android:layout_width="200sp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/prspinner2">
                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150sp"
                            android:layout_height="20sp"
                            android:text="Player3"
                            android:id="@+id/textplayer3"/>

                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="100sp"
                            app:srcCompat="@drawable/profile"/>

                    </LinearLayout>

                    <Spinner
                        android:layout_width="200sp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/prspinner3">
                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150sp"
                            android:layout_height="20sp"
                            android:text="Player4"
                            android:id="@+id/textplayer4"/>

                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="100sp"
                            app:srcCompat="@drawable/profile"/>

                    </LinearLayout>

                    <Spinner
                        android:layout_width="200sp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/prspinner4">
                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="150sp"
                            android:layout_height="20sp"
                            android:text="Player5"
                            android:id="@+id/textplayer5"/>

                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="100sp"
                            app:srcCompat="@drawable/profile"/>

                    </LinearLayout>

                    <Spinner
                        android:layout_width="200sp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/prspinner5">
                    </Spinner>

                </LinearLayout>





            </LinearLayout>


        </ScrollView>


    </LinearLayout>






    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backmainstate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextday"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>